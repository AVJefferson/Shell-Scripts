# alias for launching new terminal window
alias gt="gnome-terminal --"
alias htop="gnome-terminal --geometry 140x40 -t htop -- sudo htop"

# Simplification Alias
alias py="python3"
alias vim="vim.tiny"
alias 'cd..'='cd ..'
alias rm='rm -i'

# use aptitude instead of apt
alias apt="sudo aptitude"
alias aptclear="sudo apt autoremove && sudo apt autoclean"

# git Aliases
alias gitlog='git log --decorate --graph'

# Fast Shutdown and Reboot
alias shutnow="shutdown now"

# mariadb jump to database
alias runningdb="mariadb running_db -u USER_NAME -pPASSWORD"
